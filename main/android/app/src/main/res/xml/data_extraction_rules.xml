<?xml version="1.0" encoding="utf-8"?>
<!--
    CRITICAL: Data extraction rules for Android 12+ (API 31+)
    This file controls what data can be backed up and transferred.
    
    For a secure chat app with encryption keys, we disable ALL backup
    to prevent:
    1. Encryption keys from being backed up to cloud
    2. Old/empty backup data from overwriting local data
    3. Data inconsistencies between backup and actual app state
-->
<data-extraction-rules>
    <!-- Disable cloud backup entirely -->
    <cloud-backup>
        <!-- Exclude everything from backup -->
        <exclude domain="sharedpref" path="."/>
        <exclude domain="database" path="."/>
        <exclude domain="file" path="."/>
        <exclude domain="external" path="."/>
        <exclude domain="root" path="."/>
    </cloud-backup>
    
    <!-- Disable device-to-device transfer -->
    <device-transfer>
        <!-- Exclude everything from device transfer -->
        <exclude domain="sharedpref" path="."/>
        <exclude domain="database" path="."/>
        <exclude domain="file" path="."/>
        <exclude domain="external" path="."/>
        <exclude domain="root" path="."/>
    </device-transfer>
</data-extraction-rules>

